<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Students</title>
    <link rel="stylesheet" href="/task7Views/styles.css">
  </head>
  <body>
    <form action="/task7" method="post">
      <% if(search!=false) {%>
        <p><input type="text" value="<%=search%>" name="search" autofocus> <button type="submit">Search</button></p>
      <%} else {%>
        <p><input type="text" placeholder="Search" name="search" autofocus> <button type="submit">Search</button></p>
      <%}%>
    </form>
    <table>
        <tr>
            <th>Student ID</th>
            <td>_</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>^</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>$</td>
        </tr>
        <tr>
            <th>Contact NO</th>
            <td>}</td>
        </tr>
        <tr>
            <th>Email ID</th>
            <td>{</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>:</td>
        </tr>
    </table>
    <table>
      <thead>
        <tr>
          <th>Student ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Contact NO</th>
          <th>Email ID</th>
          <th>Gender</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<data.length; i++) {%>
            <tr>
                <td><%=data[i].student_id%></td>
                <td><%=data[i].first_name%></td>
                <td><%=data[i].last_name%></td>
                <td><%=data[i].contact_no%></td>
                <td><%=data[i].email_id%></td>
                <td><%=data[i].gender%></td>
            </tr>
        <%}%>
      </tbody>
    </table>
  </body>
</html>
