    <div class="buttons2">
      <button class="buttons2-plus" onclick="addColumn()">+Column</button>
      <button class="buttons2-minus" onclick="removeColumn()">- Column</button>
    </div>
    <script>
      function addRow() {
        let table = document.getElementById("myTable");
        let cols = table.rows[0].cells.length;
        let rows = table.rows.length;
        let row_insert = table.insertRow(rows);

        for (let i = 0; i < cols; i++) {
          let cell = row_insert.insertCell(i);
        }
      }

      function deleteRow() {
        let table = document.getElementById("myTable");
        let cols = table.rows[0].cells.length;
        let rows = table.rows.length;
        if (rows == 1) {
          alert("You can't delete row now");
          return;
        }
        table.deleteRow(rows - 1);
      }

      function addColumn() {
        let table = document.getElementById("myTable");
        let rows = table.rows.length;
        let cell = table.rows[0].cells.length;

        for (let i = 0; i < rows; i++) {
          let column = table.rows[i].insertCell(cell);
        }
      }

      function removeColumn() {
        let table = document.getElementById("myTable");
        let rows = table.rows.length;
        let cell = table.rows[0].cells.length;

        if (cell == 1) {
          alert("You can't delete a column now");
          return;
        }

        for (let i = 0; i < rows; i++) {
          table.rows[i].deleteCell(cell - 1);
        }
      }
    </script>
